{
  "train_batch_size": 4,
  "gradient_accumulation_steps": 8,
  "steps_per_print": 20,

  "fp16": { "enabled": true },

  "zero_optimization": {
    "stage": 1,
    "overlap_comm": true,
    "contiguous_gradients": true
  },

  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 2e-4,
      "betas": [0.9, 0.95],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },

  "gradient_clipping": 1.0,
  "wall_clock_breakdown": false
}
